<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="App Notification Messages">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="enable_notification"
            android:title="Enable Notification"
            android:summary="On/Off"/>
        <CheckBoxPreference
            android:defaultValue="true"
            app:dependency="enable_notification"
            android:key="enable_notification_sound"
            android:title="Enable Notification Sound"
            android:summary="On/Off"/>
        <CheckBoxPreference
            android:defaultValue="true"
            app:dependency="enable_notification"
            android:key="enable_notification_vibration"
            android:title="Enable Notification Vibration"
            android:summary="On/Off"/>
    </PreferenceCategory>

</PreferenceScreen>
